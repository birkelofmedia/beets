// webpack.mix.js

let mix = require('laravel-mix');

mix
    .setPublicPath('./dist')
    // .js('src/js/app.js', 'js')
    // .sass('src/scss/app.scss', 'css')
    .sass('src/scss/beets.scss', 'css')
    .options({
        postCss: [require('tailwindcss')],
    })
    .browserSync({
        proxy: 'mysite.local', // Set to your "localhost/folder" or virtual host "myvhost.local"
        files: [
            './**/*.html',
            './dist'
        ]
    });